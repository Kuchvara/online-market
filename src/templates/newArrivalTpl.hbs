<li class="arrival-item">
  <img class="arrival-image" src={{image}} alt={{name}} 
  onerror="src='https://subscribenow.com.au/time/asia/Solo/Content/Images/noCover.gif'"/>
  <span class="arrival-name">{{name}}</span>
  <span class="arrival-price">{{price}}$</span>
  <div class="product-icons">
    <a href="" class="product-icon-box product-link" id={{id}}>
      <svg class="product-icon">
        <use href="./images/svg/sprite.svg#icon-search"></use>
      </svg>
    </a>
    <button class="product-icon-box" id="product-cart-btn">
      <svg class="product-icon">
        <use href="./images/svg/sprite.svg#icon-basket"></use>
      </svg>
    </button>
  </div>
</li>